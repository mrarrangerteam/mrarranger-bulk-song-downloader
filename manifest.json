{
  "manifest_version": 3,
  "name": "Mrarranger Bulk Song Downloader",
  "version": "1.5.0",
  "description": "Bulk download songs from Suno.com - MP3 & WAV with correct filenames",
  "permissions": [
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://suno.com/*",
    "https://*.suno.com/*",
    "https://cdn1.suno.ai/*",
    "https://cdn2.suno.ai/*",
    "https://studio-api.prod.suno.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://suno.com/*", "https://*.suno.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js"],
      "matches": ["https://suno.com/*", "https://*.suno.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Mrarranger Bulk Song Downloader"
  }
}
